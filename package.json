{
  "name": "ukiyojs",
  "version": "3.0.3",
  "description": "Modern parallax library for picture elements and any images",
  "homepage": "https://yitengjun.github.io/ukiyo-js/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yitengjun/ukiyojs.git"
  },
  "main": "./dist/ukiyo.min.js",
  "keywords": [
    "javascript",
    "parallax",
    "scroll",
    "background-image",
    "background",
    "parallax-scrolling"
  ],
  "author": "Yiteng Jun <ito.yitengjun@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "rollup -c -w",
    "build": "rollup -c",
    "lint": "eslint  \"./src/**/*.ts\" --fix",
    "format": "prettier --write \"./src/**/*.ts\" \"./types/**/*.ts\"",
    "serve": "browser-sync start --config \"./.bs-config.js\"",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^8.0.2",
    "@semantic-release/npm": "^8.0.3",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "browser-sync": "^2.27.10",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.8.0",
    "rollup": "^2.70.1",
    "semantic-release": "^18.0.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.3"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ]
  }
}
